    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getDemand"
        android:onClick="getDemand"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setDemandIn"
        android:onClick="setDemandIn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setDemandOut"
        android:onClick="setDemandOut"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="setDemandInOut"
        android:onClick="setDemandInOut"/>
