<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/parent"

    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_v1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#999"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="v1"
        android:onClick="v1Btn"
        android:layout_below="@id/tv_v1"/>
    <TextView
        android:layout_toRightOf="@id/tv_v1"
        android:layout_marginLeft="20dp"
        android:id="@+id/tv_v2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#116677"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_v2"
        android:layout_marginTop="10dp"
        android:text="v2"
        android:onClick="v2Btn"
        android:layout_below="@id/tv_v2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_v2"
        android:layout_marginTop="80dp"
        android:text="scale"
        android:onClick="v3Btn"
        android:layout_below="@id/tv_v2"/>

    <!--<TextView
        android:id="@+id/tv_theftproof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="游客 MAC"/>-->
</RelativeLayout>
